{
  "name": "@zhdgps/hi-components-web",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "src",
    "docs"
  ],
  "license": "ISC",
  "engines": {
    "node": ">= 16"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:style": "stylelint \"./**/*.{css,scss,vue,html}\" --fix",
    "prepare": "husky install",
    "docs:dev": "pnpm run -C docs dev",
    "build:components": "pnpm run -C packages/components build"
