{
  "name": "@zhdgps/hi-components-web",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "src",
    "docs"
  ],
  "license": "ISC",
  "engines": {
    "node": ">= 16"
  },
  "scripts": {
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "lint-staged": "lint-staged",
    "lint:script": "eslint --ext .js,.jsx,.ts,.tsx,.vue --fix ./",
    "lint:style": "stylelint --fix ./**/*.{css,scss,vue,html}",
    "dev:docs": "pnpm run -C docs dev",
    "clean:type": "rimraf ./dist",
    "type:node": "tsc -p tsconfig.node.json --noEmit --composite false",
    "type:src": "pnpm run clean:type && vue-tsc -p tsconfig.src.json --composite false --declaration --emitDeclarationOnly",
    "build:docs": "pnpm run -C docs build",
    "build:ui": "pnpm run type:src && pnpm --filter ./packages/** run build",
    "remove:modules": "find . -name 'node_modules' -type d -exec rimraf {} +"
  },
  "dependencies": {
    "@vue/shared": "^3.3.8",
    "@vueuse/core": "^10.6.1",
    "@zhdgps/assets": "workspace:^",
    "@zhdgps/constants": "workspace:^",
    "@zhdgps/utils": "workspace:^",
    "@zhdgps/vue3-tools": "workspace:^",
    "vue": ">=3.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@stylistic/stylelint-plugin": "^2.0.0",
    "@tsconfig/node18": "^18.2.2",
    "@types/node": "^18.19.3",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/tsconfig": "^0.4.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-vue": "^9.20.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.2",
    "rollup-plugin-visualizer": "^5.11.0",
    "stylelint": "^16.1.0",
    "stylelint-config-recess-order": "^4.4.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.5",
    "vite-plugin-imagemin": "^0.6.1",
    "vite-plugin-inspect": "^0.8.1",
    "vue-eslint-parser": "^9.4.0",
    "vue-tsc": "^1.8.5"
  }
}