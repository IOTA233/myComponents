    "@zhdgps/components": "workspace:^",
    "@zhdgps/constants": "workspace:^",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "lodash-unified": "^1.0.3",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.1.1",
    "@tsconfig/node18": "^18.2.2",
    "@types/node": "^18.19.3",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/tsconfig": "^0.4.0",
    "@zhdgps/utils": "workspace:^",
    "axios": "^1.6.2",
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "postcss": "^8.4.32",
    "postcss-html": "^1.5.0",
    "postcss-scss": "^4.0.9",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "typescript": "^5.2.2",
    "vite": "^4.4.5",
    "vue-tsc": "^1.8.5"
  }
}
